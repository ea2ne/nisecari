%header.header
  .header-bar
    .main-header
      %h1.icon
        = link_to image_tag(image_path('header/logo.png'), class: "img"), root_path 
      .search-box
        = search_form_for @search,url: searches_path do |f|
          = f.search_field :name_cont,class:'search',placeholder: '何かお探しですか？'
          %button{type: "submit"}
            .searchicon
              = image_tag(image_path('header/icon-search.png'), class: 'img')

      %ul.resultlists
    .list-bar
      %ul.listsLeft
        %li.listleft-item-first
          = link_to "カテゴリ", "#", class: "category"
          .listleft-item-first-tree
            %ul.categoryTree
              %li.category-item
                = link_to "レディース", "#", class: "item" 
              %li.category-item
                = link_to "メンズ", "#", class: "item" 
              %li.category-item
                = link_to "ベビー・キッズ", "#", class: "item" 
              %li.category-item
                = link_to "インテリア・住まい・小物", "#", class: "item" 
              %li.category-item
                = link_to "本・音楽・ゲーム", "#", class: "item"
              %li.category-item
                = link_to "おもちゃ・ホビー・グッズ", "#", class: "item"
              %li.category-item
                = link_to "コスメ・香水・美容", "#", class: "item"
              %li.category-item
                = link_to "家電＿スマホ・カメラ", "#", class: "item"
              %li.category-item
                = link_to "スポーツ・レジャー", "#", class: "item"
              %li.category-item
                = link_to "ハンドメイド", "#", class: "item"
              %li.category-item
                = link_to "チケット", "#", class: "item"
              %li.category-item
                = link_to "自転車・オートバイ", "#", class: "item"
              %li.category-item
                = link_to "その他", "#", class: "item"
          
        %li.listleft-item-second 
          = link_to "ブランド", "#", class: "brand"
          
      .listCenter
        = render "layouts/breadcrumbs"
        -# - breadcrumb :mypage
        -# = breadcrumbs separator: " &rsaquo; "

      .listsRight
        %ul.link-lists
          - if user_signed_in?
            %li.listsRight-login
              = link_to "ログアウト", destroy_user_session_path, method: :delete
            %li.listsRight-new
              = link_to "マイページ", user_path(current_user)
          - else
            %li.listsRight-login
              = link_to "ログイン", new_user_session_path
            %li.listsRight-new
              = link_to "新規登録", new_user_registration_path